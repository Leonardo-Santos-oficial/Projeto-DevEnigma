{
  "name": "devenigma",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "prebuild": "npm run clean",
    "clean": "rimraf .next coverage",
    "start": "next start",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node --esm prisma/seed.ts",
    "dev:mem": "cross-env USE_IN_MEMORY=true next dev",
    "check:env": "ts-node --esm src/core/config/validate-env.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "commit": "cz",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "next": "14.2.32",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "next-auth": "4.24.7",
    "@prisma/client": "5.19.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "typescript": "5.5.4",
    "tailwindcss": "3.4.10",
    "autoprefixer": "10.4.20",
    "postcss": "8.4.45",
    "eslint": "8.57.0",
    "@typescript-eslint/parser": "7.18.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "eslint-config-next": "14.2.5",
    "prettier": "3.3.3",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-unused-imports": "3.2.0",
    "@types/node": "20.14.12",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/jsonwebtoken": "9.0.5",
    "prisma": "5.19.1",
    "vitest": "2.0.5",
    "@vitest/coverage-v8": "2.0.5",
    "vite": "5.4.6",
    "ts-node": "10.9.2",
    "rimraf": "5.0.5",
    "cross-env": "7.0.3",
    "husky": "9.1.6",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "overrides": {
    "cookie": "0.7.0"
  }
}
